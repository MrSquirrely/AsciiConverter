<Window x:Class="ASCIIV.Core.Controls.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Color" 
        Height="400" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="{StaticResource PixelatedEleganceFont}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="15" BorderThickness="2" BorderBrush="{StaticResource MainGradientBrush}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#444" Offset="0.0"/>
                <GradientStop Color="#222" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" x:Name="ColorPreviewBorder" 
                    Height="80" CornerRadius="10" Margin="0,0,0,20"
                    BorderBrush="White" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <TextBlock x:Name="HexCodeText" 
                           Text="#FFFFFF" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="Black" FontSize="20" FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" BlurRadius="2" ShadowDepth="0" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <DockPanel LastChildFill="False">
                    <Label Content="Red" Foreground="#FF6666" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="RedValueText" Text="255" Foreground="White" 
                               VerticalAlignment="Center" DockPanel.Dock="Right"/>
                </DockPanel>
                <Slider x:Name="RedSlider" Maximum="255" Value="255" 
                        Style="{StaticResource ModernSlider}" 
                        ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <DockPanel LastChildFill="False">
                    <Label Content="Green" Foreground="#66FF66" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="GreenValueText" Text="255" Foreground="White" 
                               VerticalAlignment="Center" DockPanel.Dock="Right"/>
                </DockPanel>
                <Slider x:Name="GreenSlider" Maximum="255" Value="255" 
                        Style="{StaticResource ModernSlider}"
                        ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <DockPanel LastChildFill="False">
                    <Label Content="Blue" Foreground="#6666FF" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="BlueValueText" Text="255" Foreground="White" 
                               VerticalAlignment="Center" DockPanel.Dock="Right"/>
                </DockPanel>
                <Slider x:Name="BlueSlider" Maximum="255" Value="255" 
                        Style="{StaticResource ModernSlider}"
                        ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Confirm" Click="OkButton_Click" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Width="120" Height="40" Margin="0,0,20,0"/>

                <Button Content="Cancel" Click="CancelButton_Click" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Width="120" Height="40"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>