<Window x:Class="AsciiConverter.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" 
        AllowsTransparency="True" Background="Transparent"
        Topmost="True">

    <Border x:Name="MainBorder" CornerRadius="10" BorderThickness="1" BorderBrush="#555">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#444" Offset="0.0"/>
                <GradientStop Color="#222" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText" Text="Notification" 
                       Foreground="#DDD" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="10,0,0,0"/>

            <Button Grid.Row="0" x:Name="CloseButton" HorizontalAlignment="Right" Width="30" Height="30" 
                    Background="Transparent" BorderThickness="0" 
                    Foreground="White" FontWeight="Bold" Content="✕" 
                    Click="CloseButton_Click" Cursor="Hand"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15,10,15,10">
                <TextBlock x:Name="MessageText" 
                           Text="Your message goes here..." 
                           Style="{StaticResource ModernTextBlock}" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">

                <Button x:Name="OkButton" Content="OK" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Width="100" Height="35" Margin="5" 
                        Click="OkButton_Click"/>

                <Button x:Name="CancelButton" Content="Cancel" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Width="100" Height="35" Margin="5" 
                        Click="CloseButton_Click" 
                        Visibility="Collapsed"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>