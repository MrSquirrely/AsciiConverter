<Window x:Class="ASCIIV.Player.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASCII Player" Height="600" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Drop="Window_Drop"
        AllowDrop="True"
        FontFamily="{StaticResource PixelatedEleganceFont}">

    <Border CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource MainGradientBrush}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#444" Offset="0.0"/>
                <GradientStop Color="#222" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#202020" 
                    CornerRadius="8,8,0,0" 
                    MouseDown="TitleBar_MouseDown"
                    Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="WindowTitleText" 
                               Text="ASCII Player" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"
                               FontSize="16"
                               Opacity="1.0"
                               FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,5,0">
                        <Button Content="_" Click="MinimizeButton_Click"
                                Style="{StaticResource TitleBarButtonStyle}" 
                                Width="40" Height="30"
                                Padding="0,-10,0,0"/>

                        <Button Content="X" Click="CloseButton_Click"
                                Style="{StaticResource TitleBarCloseButtonStyle}" 
                                Width="40" Height="30"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="Black" Margin="2,0,2,0">
                    <Viewbox Stretch="Uniform">
                        <TextBlock x:Name="DisplayText" 
                                   FontFamily="Consolas, Courier New, Monospace" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   TextAlignment="Left"/>
                    </Viewbox>
                </Border>

                <Border Grid.Row="1" Padding="15" CornerRadius="0,0,8,8">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#333" Offset="0.0"/>
                            <GradientStop Color="#111" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <Slider x:Name="ProgressSlider"
                                Style="{StaticResource ModernSlider}"
                                Minimum="0" Maximum="100" Value="0"
                                Margin="0,0,0,15"
                                Thumb.DragStarted="ProgressSlider_DragStarted"
                                Thumb.DragCompleted="ProgressSlider_DragCompleted"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="PlayPauseButton" 
                                    Style="{StaticResource GradientRoundedButtonStyle}"
                                    Width="80" Height="38" 
                                    Click="PlayPauseButton_Click">
                                <Path x:Name="PlayButtonIcon"
                                      Data="{StaticResource PauseIcon}"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Stretch="Uniform" Height="14" Width="14"/>
                            </Button>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                                <Button x:Name="SnapshotButton"
                                        Style="{StaticResource GradientRoundedButtonStyle}"
                                        Height="38" Width="50"
                                        Click="SnapshotButton_Click"
                                        Margin="0,0,10,0"
                                        ToolTip="Save Snapshot">
                                    <Path Data="{StaticResource CameraIcon}"
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                          Stretch="Uniform" Width="16" Height="16"/>
                                </Button>

                                <Button x:Name="FullScreenButton"
                                        Style="{StaticResource GradientRoundedButtonStyle}"
                                        Height="38" Width="50"
                                        Click="FullScreenButton_OnClick"
                                        Margin="0,0,15,0">
                                    <Path x:Name="FullScreenIcon"
                                          Data="{StaticResource FullScreenIcon}"
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                          Stretch="Uniform" Width="14" Height="14"/>
                                </Button>

                                <TextBlock Text="Vol" 
                                           Style="{StaticResource ModernTextBlock}" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>

                                <Slider x:Name="VolumeSlider" 
                                        Style="{StaticResource ModernSlider}"
                                        Minimum="0" Maximum="1" Value="0.5" 
                                        Width="100" 
                                        VerticalAlignment="Center"
                                        ValueChanged="VolumeSlider_ValueChanged"
                                        AutoToolTipPlacement="TopLeft"
                                        AutoToolTipPrecision="0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>