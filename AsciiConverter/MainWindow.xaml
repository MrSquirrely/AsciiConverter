<Window x:Class="ASCIIV.Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanResize" 
        MinHeight="550" MinWidth="600"
        Height="650" Width="800"
        Title="Video to ASCII Converter"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource  PixelatedEleganceFont}">

    <Border CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource MainGradientBrush}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#444" Offset="0.0"/>
                <GradientStop Color="#222" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#202020" 
                    CornerRadius="8,8,0,0" 
                    MouseDown="TitleBar_MouseDown">

                <Grid Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Video to ASCIIV Converter" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"
                               FontSize="16"
                               Opacity="1.0"
                               FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,5,0">
                        <Button Content="_" Click="MinimizeButton_Click"
                                Style="{StaticResource TitleBarButtonStyle}" 
                                Width="40" Height="30" Margin="0,0,0,0"
                                Padding="0,-10,0,0"/>

                        <Button Content="X" Click="CloseButton_Click"
                                Style="{StaticResource TitleBarCloseButtonStyle}" 
                                Width="40" Height="30"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="30,10,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="1. Select a Video File" 
                           Style="{StaticResource ModernTextBlock}" Margin="0,0,0,15"/>

                <Button Grid.Row="1" x:Name="LoadButton" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Content="Load Video" Click="LoadButton_Click" 
                        Height="50" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Project Name:" FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Foreground="White" FontSize="14"/>
                    <TextBox x:Name="ProjectNameText" Width="250" 
                             Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <TextBlock Grid.Row="4" Text="2. Configure Output" 
                           Style="{StaticResource ModernTextBlock}" Margin="0,0,0,15"/>

                <WrapPanel Grid.Row="5" Margin="0,0,0,20" Orientation="Horizontal">
                    <CheckBox Name="BitCrushCheck" Content="Crush Audio" IsChecked="True" 
                              Style="{StaticResource ModernCheckBox}" Margin="0,0,30,0"/>
                    <CheckBox Name="ToMp4Check" Content="Create MP4" IsChecked="False" 
                              Style="{StaticResource ModernCheckBox}" Margin="0,0,30,0" 
                              Checked="ToMp4Check_Checked"/>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Color:" VerticalAlignment="Center" 
                               Padding="0,5,10,5" Foreground="White" 
                               FontSize="14" FontWeight="SemiBold"/>
                        <ComboBox x:Name="ColorComboBox" Width="140" SelectedIndex="0" 
                                  VerticalAlignment="Center" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="ColorComboBox_SelectionChanged">
                            <ComboBoxItem Content="White"/>
                            <ComboBoxItem Content="Lime"/>
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="Cyan"/>
                            <ComboBoxItem Content="Yellow"/>
                            <ComboBoxItem Content="Custom..."/>
                        </ComboBox>
                    </StackPanel>
                </WrapPanel>

                <WrapPanel Grid.Row="6" Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Text Style:" VerticalAlignment="Center" 
                               Padding="0,5,10,5" Foreground="White" 
                               FontSize="14" FontWeight="SemiBold"/>
                        <ComboBox x:Name="TextStyleComboBox" Width="140" SelectedIndex="0" IsEditable="True"
                                  VerticalAlignment="Center" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="Standard"/>
                            <ComboBoxItem Content="Binary"/>
                            <ComboBoxItem Content="High Detail"/>
                            <ComboBoxItem Content="Blocks"/>
                        </ComboBox>

                        <Label Content="Video Width:" VerticalAlignment="Center" 
                               Padding="20,5,10,5" Foreground="White" 
                               FontSize="14" FontWeight="SemiBold"/>
                        <Slider x:Name="VideoWidthSlider" Style="{StaticResource ModernSlider}" 
                                Minimum="50" Maximum="550" Value="150" 
                                Margin="5,0,0,0" Width="220"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"/>
                    </StackPanel>
                </WrapPanel>

                <Button Grid.Row="7" x:Name="ConvertButton" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Content="Convert &amp; Save" Click="ConvertButton_Click" 
                        Height="55" IsEnabled="False" Margin="0,0,0,20"/>

                <TextBlock Grid.Row="8" x:Name="StatusText" Text="Ready" 
                           Style="{StaticResource ModernTextBlock}"
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <ProgressBar Grid.Row="9" x:Name="ConvertProgressBar" 
                             Style="{StaticResource RainbowProgressStyle}" 
                             Height="20" Minimum="0" Maximum="100" Margin="0,0,0,20"/>

                <Button Grid.Row="10" x:Name="PlayButton" 
                        Style="{StaticResource GradientRoundedButtonStyle}" 
                        Content="Play Last Output" Click="PlayButton_Click" 
                        Height="50"/>

            </Grid>
        </Grid>
    </Border>
</Window>