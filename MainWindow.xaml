<Window x:Class="AsciiConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsciiConverter"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Video to ASCII Converter" Height="280" Width="420">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCDCDC" Offset="0.0"/>

            <GradientStop Color="#696969" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <TextBlock Text="1. Select a Video File (.mp4)" FontWeight="Bold" Margin="20,0,0,5" />
        <Button x:Name="BtnLoad" Style="{StaticResource GradientRoundedButtonStyle}" Content="Load Video" Click="BtnLoad_Click" Height="38" Margin="20,0,20,20"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="2. Convert to ASCII File" FontWeight="Bold" Margin="20,0,0,5"/>
            <CheckBox Name="BitCrushCheck" Content="Crush the audio?" IsChecked="True" Margin="20,0,0,0"/>
            <CheckBox Name="ToMp4" Content="Create An MP4?" IsChecked="False" Margin="20,0,0,0"/>
        </StackPanel>
        <Button x:Name="BtnConvert" Style="{StaticResource GradientRoundedButtonStyle}" Content="Convert &amp; Save" Click="BtnConvert_Click" Height="38" IsEnabled="False" Margin="20,0"/>

        <TextBlock x:Name="TxtStatus" Text="Ready" Margin="20,10,0,5"/>
        <ProgressBar x:Name="ProgBar" Height="10" Minimum="0" Maximum="100" Margin="20,0"/>
        <Button x:Name="BtnPlay" Style="{StaticResource GradientRoundedButtonStyle}" Content="Play Last Output" Click="BtnPlay_Click" Height="38" Margin="20,5"/>
    </StackPanel>
</Window>
