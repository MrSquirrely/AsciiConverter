<Window x:Class="AsciiConverter.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASCII Player" Height="600" Width="800"
        Background="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0" Stretch="Uniform" Margin="10">
            <TextBlock x:Name="TxtDisplay" 
                       FontFamily="Consolas, Courier New, Monospace" 
                       Foreground="White"
                       FontWeight="Bold"
                       TextAlignment="Left"/>
        </Viewbox>

        <Border Grid.Row="1" Background="#222" Padding="10">
            <StackPanel>

                <Slider x:Name="SldProgress"
                        Style="{StaticResource ModernSlider}"
                        Minimum="0"
                        Maximum="100" 
                        Value="0"
                        Margin="0,0,0,10"
                        IsMoveToPointEnabled="True"
                        Thumb.DragStarted="SldProgress_DragStarted"
                        Thumb.DragCompleted="SldProgress_DragCompleted"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnPlayPause" 
                            Style="{StaticResource GradientRoundedButtonStyle}"
                            Width="80" 
                            Height="38" 
                            Click="BtnPlayPause_Click">
                        <Path x:Name="IconPlayButton"
                              Data="{StaticResource PauseIcon}"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Stretch="Uniform" Height="16" Width="16"/>
                    </Button>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="FullScreenButton"
                                Style="{StaticResource GradientRoundedButtonStyle}"
                                Height="38"
                                Width="60"
                                Click="FullScreenButton_OnClick"
                                Margin="0,0,5,0">
                            <Path x:Name="IconFullScreen"
                                  Data="{StaticResource FullScreenIcon}"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                  Stretch="Uniform" Width="16" Height="16"/>
                        </Button>
                        <Label Content="Vol" Foreground="White" VerticalAlignment="Center"/>
                        <Slider x:Name="SldVolume" 
                                Style="{StaticResource ModernSlider}"
                                Minimum="0" 
                                Maximum="1" 
                                Value="0.5" 
                                Width="100" 
                                VerticalAlignment="Center"
                                ValueChanged="SldVolume_ValueChanged"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>