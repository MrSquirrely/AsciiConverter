<Window x:Class="AsciiConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsciiConverter"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        MinHeight="400" MinWidth="500"
        Height="450" Width="600"
        Title="Video to ASCII Converter">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCDCDC" Offset="0.0"/>
            <GradientStop Color="#696969" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="1. Select a Video File" FontWeight="Bold" Margin="0,0,0,5"/>
        <Button Grid.Row="1" x:Name="BtnLoad" Style="{StaticResource GradientRoundedButtonStyle}" 
                Content="Load Video" Click="BtnLoad_Click" Height="40" Margin="0,0,0,0"/>

        <TextBlock Grid.Row="3" Text="2. Configure Output" FontWeight="Bold" Margin="0,0,0,5"/>

        <WrapPanel Grid.Row="4" Margin="0,0,0,15" Orientation="Horizontal">
            <CheckBox Name="BitCrushCheck" Content="Crush Audio" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <CheckBox Name="ToMp4" Content="Create MP4" IsChecked="False" VerticalAlignment="Center" Margin="0,0,15,0"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="Color:" VerticalAlignment="Center" Padding="0,5,5,5"/>
                <ComboBox x:Name="CmbColor" Width="100" SelectedIndex="0" VerticalAlignment="Center">
                    <ComboBoxItem Content="White"/>
                    <ComboBoxItem Content="Lime"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Cyan"/>
                    <ComboBoxItem Content="Yellow"/>
                </ComboBox>
            </StackPanel>
        </WrapPanel>

        <Button Grid.Row="5" x:Name="BtnConvert" Style="{StaticResource GradientRoundedButtonStyle}" 
                Content="Convert &amp; Save" Click="BtnConvert_Click" Height="45" IsEnabled="False"/>

        <TextBlock Grid.Row="6" x:Name="TxtStatus" Text="Ready" 
                   FontSize="16" FontWeight="SemiBold" Foreground="#333"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <ProgressBar Grid.Row="7" x:Name="ProgBar" Style="{StaticResource RainbowProgressStyle}" 
                     Height="15" Minimum="0" Maximum="100" Margin="0,0,0,10"/>

        <Button Grid.Row="8" x:Name="BtnPlay" Style="{StaticResource GradientRoundedButtonStyle}" 
                Content="Play Last Output" Click="BtnPlay_Click" Height="40"/>

    </Grid>
</Window>